{
    "manifest_version": 3,
    "name": "Diss-lexia",
    "default_locale": "en",
    "description": "Accessible tool to help people with dyslexia",
    "version": "0.1",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": [""],
        "js": [""]
      }
    ],
    "browser_action": {
     "default_popup": "popup.html",
     "default_title": "Diss-lexia Browser Extension!"
    },
    "web_accessible_resources": [
      "static/fonts/*"
    ],
    "icons": {
      "32": "/static/logo/ico-32x32.png",
      "64": "/static/logo/ico-64x64.png",
      "128": "/static/logo/ico-128x128.png"
    },
    "permissions": [
     "tabs"
    ]
  }